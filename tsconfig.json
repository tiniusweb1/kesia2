{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext", // Allows top-level await
    "target": "es2017" // Ensures compatibility with es2017 or higher
    ,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "extends": "./node_modules/@tsconfig/recommended/tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
